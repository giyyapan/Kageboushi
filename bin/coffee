#!/bin/bash
currentPath="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
declare nodeBin
#echo $CWD
if [ "$(uname)" == "Darwin" ]; then
    # Mac OS X platform
		nodeBin=node_mac
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
    # Linux platform
		nodeBin=node_linux
elif [ "$(expr substr $(uname -s) 1 10)" == "MINGW32_NT" ]; then
    # Do something under Windows NT platform
		nodeBin=node_win
fi
echo 'Node binary file is' $nodeBin
$currentPath/$nodeBin $currentPath/../node_modules/coffee-script/bin/coffee $@
